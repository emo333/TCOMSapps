@model TCOMSapps.Features.OOSTitles.Locations.LocationViewModel
@{ ViewBag.Title = "Create";}
<br />
<h2>ADD NEW LOCATION</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label asp-for="Location.Name" class="control-label col-md-2"></label>
            <div class="col-md-4">
                <input asp-for="Location.Name" class="form-control" />
                <span asp-validation-for="Location.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">County</label>
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.Location.CountyId, Model.CountySelectList, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Location.Manager" class="control-label col-md-2"></label>
            <div class="col-md-4">
                <input asp-for="Location.Manager" class="form-control" />
                <span asp-validation-for="Location.Manager" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"><input type="submit" value="Create" class="btn btn-success" /></div>
        </div>
    </div>
}
@section Scripts {}
