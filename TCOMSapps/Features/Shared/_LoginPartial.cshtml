@using TCOMSapps.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@if (SignInManager.IsSignedIn(User))
{
	<form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="justify-content-end ml-auto">
		<ul class="navbar-nav">
			<li class="nav-item">
				<a asp-controller="Manage" asp-action="Index" class="btn btn-link nav-link" title="Manage"><span class="tcoms-data-color">Hello @UserManager.GetUserAsync(User).Result.FirstName!</span></a>
			</li>
			<li class="nav-item">
				<button type="submit" class="btn btn-link navbar-btn navbar-link nav-link">Log out</button>
			</li>
		</ul>
	</form>
}
else
{
	<ul class="nav navbar-nav justify-content-end ml-auto">
		<li class="nav-item"><a asp-controller="Account" asp-action="Register" class="nav-link">Register</a></li>
		<li class="nav-item"><a asp-controller="Account" asp-action="Login" class="nav-link">Log in</a></li>
	</ul>
}
